<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/dimension_16dp">

    <TextView
        android:id="@+id/content_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="10 pts"
        android:gravity="center"
        android:background="@drawable/shape_circle"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/dimension_30dp"/>


    <TextView
        android:id="@+id/jogar_novamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Jogar novamente"
        android:layout_below="@+id/content_points"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/dimension_16dp"/>

    <TextView
        android:id="@+id/compartilhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/jogar_novamente"
        android:text="Compartilhar"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/dimension_16dp"/>

    <TextView
        android:id="@+id/desafiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/compartilhar"
        android:text="Desafiar amigo"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/dimension_16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desafiar"
        android:layout_centerHorizontal="true"
        android:text="Saiba Mais"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/dimension_16dp"/>

    <com.facebook.share.widget.ShareButton
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@color/white"
            android:text="@string/finished"/>

    </LinearLayout>

</RelativeLayout>