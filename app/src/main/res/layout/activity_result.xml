<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/dimension_16dp">


    <TextView
        android:id="@+id/content_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_circle"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:textColor="@color/primary_material_light_1"
        android:text="10 pts"
        android:gravity="center"
        android:textSize="@dimen/dimension_30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/jogar_novamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_points"
        android:layout_centerHorizontal="true"
        android:text="Jogar novamente"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dimension_16dp"/>

    <TextView
        android:id="@+id/compartilhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/jogar_novamente"
        android:text="Compartilhar"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dimension_16dp"/>

    <TextView
        android:id="@+id/desafiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/compartilhar"
        android:text="Desafiar amigo"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dimension_16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desafiar"
        android:layout_centerHorizontal="true"
        android:text="Saiba"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dimension_16dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dimension_16dp"/>

    <com.facebook.share.widget.ShareButton
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />

</RelativeLayout>